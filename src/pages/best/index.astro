---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = `Best Mattresses by Category 2026`;
const description = `Browse the best mattresses organized by category. Find exactly what you're looking for.`;

const categories = [
  {
    "name": "Memory Foam",
    "slug": "memory-foam",
    "description": "Top memory foam options"
  },
  {
    "name": "Hybrid",
    "slug": "hybrid",
    "description": "Top hybrid options"
  },
  {
    "name": "Innerspring",
    "slug": "innerspring",
    "description": "Top innerspring options"
  },
  {
    "name": "Latex",
    "slug": "latex",
    "description": "Top latex options"
  },
  {
    "name": "Budget",
    "slug": "budget",
    "description": "Top budget options"
  },
  {
    "name": "Luxury",
    "slug": "luxury",
    "description": "Top luxury options"
  }
];
---

<BaseLayout title={title} description={description}>
  <div class="mb-12 text-center">
    <h1 class="text-4xl font-bold mb-4">{title}</h1>
    <p class="text-lg text-gray-600 max-w-2xl mx-auto">
      {description}
    </p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {categories.map(cat => (
      <a 
        href={`/best/${cat.slug}`}
        class="p-6 bg-white border border-gray-200 rounded-lg hover:shadow-lg hover:border-blue-300 transition-all"
      >
        <h3 class="text-xl font-bold mb-2">{cat.name}</h3>
        <p class="text-gray-600 text-sm">{cat.description}</p>
      </a>
    ))}
  </div>
</BaseLayout>
